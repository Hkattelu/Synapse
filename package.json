{
  "name": "synapse",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/dist/main.js",
  "scripts": {
    "dev": "vite",
    "server": "node server/index.mjs",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "generate:launch-og": "node ./scripts/generate-og.mjs public/launch/og-image.svg public/launch/og-image.png",
    "electron:build": "tsc -p tsconfig.electron.json",
    "desktop:dev": "npm run -s electron:build && cross-env SYNAPSE_ELECTRON_DEV_URL=http://localhost:5173 electron electron/dist/main.js",
    "desktop:start": "npm run -s electron:build && electron electron/dist/main.js",
    "desktop:build": "npm run -s build && npm run -s electron:build && electron-builder -c electron/packaging/electron-builder.yml"
  },
  "dependencies": {
    "@remotion/bundler": "^4.0.332",
    "@remotion/cli": "^4.0.332",
    "@remotion/player": "^4.0.332",
    "@remotion/renderer": "^4.0.332",
    "@types/prismjs": "^1.26.5",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "diff": "^5.2.0",
    "express": "^5.1.0",
    "lucide-react": "^0.539.0",
    "motion": "^12.23.12",
    "prismjs": "^1.30.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@resvg/resvg-js": "^2.6.2",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.3.0",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitejs/plugin-react-swc": "^4.0.0",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "cross-env": "^10.0.0",
    "electron": "^32.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.11",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vite-plugin-prismjs": "^0.0.11",
    "vitest": "^3.2.4"
  }
}
